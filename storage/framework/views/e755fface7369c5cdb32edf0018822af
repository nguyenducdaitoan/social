<?php if(Auth::check()): ?>

	<div id="profile-card" class="media">

		<?php if($user->is(Auth::user()->id)): ?>	

			<img class="avatar large-avatar pull-left" src="<?php echo Auth::user()->profileimage; ?>" alt="<?php echo Auth::user()->firstname; ?>">			

			<div class="media-body">
				<h4 class="media-heading"><?php echo Auth::user()->firstname; ?></h4>
									
			</div>

		<?php else: ?>

			<img class="avatar large-avatar pull-left" src="<?php echo $user->profileimage; ?>" alt="<?php echo $user->firstname; ?>">			

			<div class="media-body">
				<h4 class="media-heading"><?php echo $user->firstname; ?></h4>
				
				<?php if(Auth::user()->isFriendsWith($user->id)): ?>

					<?php echo $__env->make('messages.partials.send-email-button', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

					<a href="<?php echo url('friends'); ?>" data-method="delete" data-userid="<?php echo $user->id; ?>" class="btn btn-primary unfriend-button btn-sm" role="button">Unfriend</a>
						
				<?php else: ?>

					<?php if( Auth::user()->sentFriendRequestTo($user->id)): ?>

						<?php echo $__env->make('messages.partials.send-email-button', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

						<button class="btn btn-primary btn-sm" disabled="disabled" type="submit">Requested</button>										

					<?php elseif(Auth::user()->receivedFriendRequestFrom($user->id)): ?>

						<?php echo $__env->make('messages.partials.send-email-button', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

						<a href="<?php echo url('friends'); ?>" data-method="post" data-userid="<?php echo $user->id; ?>" class="btn btn-primary add-friend-button btn-sm" role="button">Add friend</a>				

					<?php else: ?>

						<?php echo $__env->make('messages.partials.send-email-button', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>

						<a href="<?php echo url('friend-requests'); ?>" data-method="post" data-userid="<?php echo $user->id; ?>" class="btn btn-primary friend-request-button btn-sm" role="button">Add friend</a>					

					<?php endif; ?>

				<?php endif; ?>

			</div>

		<?php endif; ?>		
		<ul class="list-inline text-muted">
			<li><span class="friends-count"><?php echo $friendsCount = $user->friends()->count(); ?></span> <?php echo str_plural('friend', $friendsCount); ?></li>
			<li><span class="feeds-count"><?php echo $friendsCount = $user->feeds()->count(); ?></span> <?php echo str_plural('feed', $friendsCount); ?></li>
		</ul>
	</div>

	<?php if($user->is(Auth::user()->id)): ?>

		<div class="list-group">
			<a href="<?php echo url('users'); ?>" class="list-group-item" role="button">Users</a>
			<a href="<?php echo url('friends'); ?>" class="list-group-item" role="button">Friends</a>
			<a href="<?php echo url('friend-requests'); ?>" class="list-group-item" role="button">Friend requests</a>
			<a href="<?php echo url('messages'); ?>" class="list-group-item" role="button">Messages</a>
		</div>

	<?php endif; ?>

<?php else: ?>

	<div id="profile-card" class="media">			

		<img class="avatar large-avatar" src="<?php echo $user->profileimage; ?>" alt="<?php echo $user->firstname; ?>">		
		
		<div class="media-body">
			<h4 class="media-heading"><?php echo $user->firstname; ?></h4>
		</div>					
	</div>

<?php endif; ?>
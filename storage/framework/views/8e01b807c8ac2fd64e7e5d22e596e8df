<?php $__env->startSection('content'); ?>

	<div class="row">
		<div class="col-md-3">

			<?php echo $__env->make('users.partials.profile-section', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
			
		</div>

		<div id="center-column" class="col-md-6">
			<?php if($users->count()): ?>
				<div class="users-list">

					<?php foreach($users as $user): ?>

						<div class="media listed-object-close">
							<div class="pull-left">		
								<a href="<?php echo url('/users/'.$user->id); ?>"><img class="media-object avatar medium-avatar" src="<?php echo $user->profileimage; ?>" alt="<?php echo $user->firstname; ?>"></a>		
							</div>
							<div class="media-body">
								<h4 class="media-heading"><?php echo $user->firstname; ?></h4>							
								<div class="pull-right">

									<?php if(Auth::user()->isFriendsWith($user->id)): ?>
											<a href="<?php echo url('friends'); ?>" data-method="delete" data-userid="<?php echo $user->id; ?>" class="btn btn-primary unfriend-button btn-sm" role="button">Unfriend</a>
												
									<?php else: ?>

											<?php if( Auth::user()->sentFriendRequestTo($user->id)): ?>

												<button class="btn btn-primary btn-sm" disabled="disabled" type="submit">Requested</button>								

											<?php elseif(Auth::user()->receivedFriendRequestFrom($user->id)): ?>

												<a href="<?php echo url('friends'); ?>" data-method="post" data-userid="<?php echo $user->id; ?>" class="btn btn-primary add-friend-button btn-sm" role="button">Add friend</a>				

											<?php else: ?>												
												<a href="<?php echo url('friend-requests'); ?>" data-method="post" data-userid="<?php echo $user->id; ?>" class="btn btn-primary friend-request-button btn-sm" role="button">Add friend</a>					

											<?php endif; ?>

									<?php endif; ?>
																									
								</div>		
							</div>
						</div>
					<?php endforeach; ?>
				</div>
					<div class="paginator text-center">
						 <?php echo $users->render(); ?>	
					</div>
			<?php else: ?>

				<div class="alert alert-info" role="alert"><span class="glyphicon glyphicon-info-sign"></span> No users were found.</div>

			<?php endif; ?>
		
				

		</div>

		<div id="right-side-column" class="col-md-3">
			<?php echo $__env->make('friends.partials.friend-chat-list', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
		</div>
	</div>	

<?php $__env->stopSection(); ?>
<?php echo $__env->make('layouts.default', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>